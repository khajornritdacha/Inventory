<%- include("templates/header.ejs") %>
<%- include("partials/navbar.ejs") %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Edit Item
        </h1>
        
        <form action="/invt/edit_item/<%= invt.id %>/<%= idx %>" method="POST">
          <div class="form-group">
            <label for="name">Item name</label>
            <input
              type="text"
              id="item_name"
              name="item_name"
              class="form-control"
              placeholder="Enter New Name"
              value="<%= typeof invt.items[idx].item_name != 'undefined' ? invt.items[idx].item_name : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Item location</label>
            <input
              type="text"
              id="item_loc"
              name="item_loc"
              class="form-control"
              placeholder="Enter New Location"
              value="<%= typeof invt.items[idx].item_loc != 'undefined' ? invt.items[idx].item_loc : '' %>"
              required
            />
          </div>
          <button type="" class="btn btn-primary btn-block">
              <a href="/invt/<%= invt.id %>"></a>
              Back
          </button>
          <button type="" class="btn btn-primary btn-block">
            <a href="/invt/<%= invt.id %>"></a>
            Delete
          </button>
          <button type="submit" class="btn btn-primary btn-block">
            Save
          </button>
        </form>
      </div>
    </div>
  </div>
  <%- include("templates/footer.ejs") %>